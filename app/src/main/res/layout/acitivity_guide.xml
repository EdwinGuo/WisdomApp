<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/gude_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/guide_btn_selector"
        android:textColor="@drawable/guide_text_selector"
        android:text="@string/guide_btn_text"
        android:layout_marginBottom="57dp"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        >
        <LinearLayout
            android:id="@+id/guide_ll_btn_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>

        <View
            android:id="@+id/guide_ll_point_red"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/guide_red_point">

        </View>
    </RelativeLayout>




</RelativeLayout>